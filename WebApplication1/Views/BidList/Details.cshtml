@model WebApplication1.Models.BidList.BidListDetailsVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BidListDetailsVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div>
    
</div>

<p/>

<div>
    <h4>Bids</h4>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Auction</th>
            <th>User</th>
            <th>Amount</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var bid in Model.BidVms)
        {
            <tr>
                <td>@bid.Id</td>
                <td>
                    @Html.ActionLink("View Auction", "WonAuction", "Auction", new { id = bid.AuctionId }, null)
                </td>
                <td>@bid.UserName</td>
                <td>@bid.Amount</td>
            </tr>
        }
        </tbody>
    </table>
</div>

