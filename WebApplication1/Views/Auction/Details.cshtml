@model WebApplication1.Models.Auction.AuctionDetailsVm

@{
    ViewData["Title"] = "Details";
    bool auctionEnded = Model.EndDate < DateTime.Now;
}

<h1>Details</h1>

<div>
    <h4>AuctionDetailsVm</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @String.Format("{0:yyyy-MM-dd HH:mm}", Model.EndDate)
        </dd>
    </dl>
</div>
<div>
   
</div>
<p/>
<div>
    <h4>Bids</h4>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Auction</th>
            <th>User</th>
            <th>Amount</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <dt class="col-sm-2">
                Highest Bid
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HighestBid)
            </dd>
        </tr>

        @foreach (var bid in Model.BidVms.OrderByDescending(b => b.Amount))
        {
        <tr>
            <td>@bid.Id</td>
            <td>@bid.AuctionId</td>
            <td>@bid.UserName</td>
            <td>@bid.Amount</td>
        </tr>
        }
        </tbody>
    </table>
</div>

@if (!auctionEnded)
{
    @if (Model.UserName == User.Identity.Name)
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    else
    {
        @Html.ActionLink("Bid", "Bid", new { id = Model.Id, highestBid = Model.HighestBid })
    }
}


